<h1> Sign In </h1>
<%= form_with url: login_path do  |form| %>

    <div class="mb-3">   
        <%= form.label :email %><br>
        <%= form.text_field :email, class: "form-control", placeholder: 'steve@apple.com' %>
    </div>
    <div class="mb-3">
        <%= form.label :password %><br>
        <%= form.password_field :password, class: "form-control", placeholder: 'password(atleast 6 charcters)' %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-info "%>
    </div>
<% end %>